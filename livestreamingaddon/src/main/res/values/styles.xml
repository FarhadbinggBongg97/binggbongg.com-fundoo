<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

    </style>

    <style name="AppThemeDark" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlActivated">@color/colorWhite</item>
    </style>

    <style name="HomeThemePublish" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlActivated">@color/colorWhite</item>
    </style>

    <style name="PlayerTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorWhite</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:statusBarColor">@color/colorBlack</item>
    </style>

    <style name="TextPrimaryLight" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:fontFamily">@font/font_light</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextBlackLight" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:fontFamily">@font/font_light</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="TextWhiteLight" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:fontFamily">@font/font_light</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextSecondaryLight" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:fontFamily">@font/font_light</item>
        <item name="android:textColor">@color/secondarytext</item>
    </style>


    //

    <style name="TextBlackRegular" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>


    <style name="TextWhiteRegular" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextWhiteBold" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:fontFamily">@font/font_bold</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextBlackBold" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:fontFamily">@font/font_bold</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="TextAshRegular" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="android:textColor">@color/secondarytext</item>
    </style>


    <style name="TextAshLight" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:fontFamily">@font/font_light</item>
        <item name="android:textColor">@color/secondarytext</item>
    </style>


    <style name="TextPrimaryRegular" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="android:textColor">@color/primarytext</item>
    </style>

    <style name="TextPrimaryBold" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:fontFamily">@font/font_bold</item>
        <item name="android:textColor">@color/primarytext</item>
    </style>

    <style name="TextSecondaryRegular" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="android:textColor">@color/secondarytext</item>
    </style>

    <style name="TextSecondaryBold" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:fontFamily">@font/font_bold</item>
        <item name="android:textColor">@color/secondarytext</item>
    </style>

    <style name="HorizontalProgressAudio" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressTint">@color/colorWhite</item>
        <item name="backgroundTint">@color/colorWhite</item>
        <item name="trackColor">@color/colorWhite</item>

    </style>

    <style name="ButtonPrimaryLight" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">@font/font_light</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/btn_bg_primary</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:paddingStart">25dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingEnd">25dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ButtonPrimaryBold" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/btn_bg_primary</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:paddingStart">25dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingEnd">25dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ButtonWhiteLight" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">@font/font_light</item>
        <item name="android:paddingStart">25dp</item>
        <item name="android:paddingEnd">25dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/btn_bg_white</item>
    </style>

    <style name="ButtonWhiteBold" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="android:paddingStart">25dp</item>
        <item name="android:font">@font/font_light</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:paddingEnd">25dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/btn_bg_white</item>
    </style>

    <style name="Bottom.StickerDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <!--<item name="android:windowCloseOnTouchOutside">false</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@color/colorBottomNavigation</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>


    <style name="CircularProgress" parent="Base.Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:indeterminateTint">@color/colorPrimary</item>
        <item name="android:indeterminate">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="BottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:backgroundDimEnabled">false</item>
        <!--<item name="android:backgroundDimAmount">0.5</item>-->
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="BottomSheet" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>


</resources>
