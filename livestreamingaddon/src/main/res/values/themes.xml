<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Bottom.ReportDialog" parent="Theme.Design.BottomSheetDialog">
        <!--<item name="android:windowCloseOnTouchOutside">false</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@color/transparentBG</item>
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">0dp</item>
    </style>

    <style name="Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <item name="dialogCornerRadius">9dip</item>
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="android:textAppearanceMedium">@style/CustomFont</item>
        <item name="android:textAppearanceLarge">@style/CustomFont</item>
        <item name="android:textAppearanceSmall">@style/CustomFont</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="CustomFont" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/font_regular</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="TextInputLayoutDesign">
        <item name="colorControlActivated">@color/primarytext</item>
        <item name="colorControlHighlight">@color/colorDivider</item>
        <item name="android:textColor">@color/primarytext</item>
        <item name="android:textColorHint">@color/secondarytext</item>
        <item name="android:textColorHighlight">@color/colorDivider</item>
        <item name="android:textColorLink">@color/colorDivider</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextInputHintLabel" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="colorControlActivated">@color/primarytext</item>
        <item name="colorControlHighlight">@color/colorDivider</item>
        <item name="android:textColor">@color/primarytext</item>
        <item name="android:textColorHint">@color/secondarytext</item>
        <item name="android:textColorHighlight">@color/colorDivider</item>
        <item name="android:textColorLink">@color/colorDivider</item>
    </style>


    <style name="Bottom.WhiteDialog" parent="Theme.Design.BottomSheetDialog">
        <!--<item name="android:windowCloseOnTouchOutside">false</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="bottomSheetStyle">@style/BottomSheetWhiteStyle</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="BottomSheetWhiteStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>

