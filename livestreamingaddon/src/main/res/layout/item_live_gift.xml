<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/giftLay"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_gravity="start"
    android:layout_marginStart="5dp"
    android:layout_marginTop="5dp"
    android:gravity="start|center_vertical"
    android:orientation="horizontal"
    android:visibility="visible">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtGiftName"
        style="@style/TextWhiteRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="start|center_vertical"
        android:background="@drawable/rounded_square_semi_transparent"
        android:gravity="start|center_vertical"
        android:layout_alignParentStart="true"
        android:textAlignment="viewStart"
        android:maxLines="2"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:paddingEnd="35dp"
        android:paddingBottom="5dp"
        android:text="@string/gifts"
        android:textSize="@dimen/text_normal"
        android:backgroundTint="@color/colorBlack"/>

    <ImageView
        android:id="@+id/giftImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/txtGiftName"
        android:src="@drawable/gift"
        android:translationX="-20dp" />

</RelativeLayout>