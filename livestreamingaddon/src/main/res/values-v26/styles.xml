<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HomeThemePublish" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorControlActivated">@color/colorWhite</item>
    </style>

    <style name="ButtonWhiteBold" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="android:paddingStart">25dp</item>
        <item name="android:font">@font/font_light</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:paddingEnd">25dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/btn_bg_white</item>
    </style>
</resources>