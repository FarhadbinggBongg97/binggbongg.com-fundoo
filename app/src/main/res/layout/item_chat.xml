<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemLay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:padding="10dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/profileImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            app:riv_corner_radius="65dp"
            app:riv_mutate_background="true" />

        <ImageView
            android:id="@+id/iconOnline"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignEnd="@+id/profileImage"
            android:layout_alignBottom="@+id/profileImage"
            android:src="@drawable/online"
            android:translationX="2dp"
            android:visibility="invisible" />

        <RelativeLayout
            android:id="@+id/contentLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="start"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/profileImage">

            <TextView
                android:id="@+id/txtName"
                style="@style/TextBlackRegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textAlignment="viewStart"
                android:gravity="start"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/txtChatTime"
                android:maxLines="1"
                android:textSize="@dimen/text_medium" />

            <LinearLayout
                android:id="@+id/msgLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtName"
                android:layout_alignStart="@+id/txtName"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical|start">

                <ImageView
                    android:id="@+id/iconPhoto"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical|start"
                    android:padding="5dp"
                    android:src="@drawable/image_placeholder"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txtMessage"
                    style="@style/TextPrimaryRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:maxLines="1"
                    android:textAlignment="viewStart"
                    android:textSize="@dimen/text_normal" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtTyping"
                style="@style/TextSecondaryRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtName"
                android:layout_alignStart="@+id/txtName"
                android:layout_alignBottom="@+id/msgLay"
                android:layout_centerVertical="true"
                android:textAlignment="gravity"
                android:gravity="center_vertical|start"
                android:maxLines="1"
                android:text="@string/typing"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_small"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/txtChatTime"
                style="@style/TextSecondaryRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/txtName"
                android:layout_alignBottom="@+id/txtName"
                android:layout_alignParentEnd="true"
                android:textAlignment="viewEnd"
                android:gravity="center_vertical|end"
                android:maxLines="1"
                android:textSize="@dimen/text_small" />

        </RelativeLayout>


    </RelativeLayout>

    <!--<View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorDivider" />-->

</LinearLayout>