<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemLay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="5dp"
    android:minHeight="150dp"
    android:orientation="vertical"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@color/grey_element_background">

    <LinearLayout
        android:background="@drawable/packge_bg"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        >

        <ImageView
            android:visibility="gone"
            android:id="@+id/giftImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:minWidth="70dp"
            android:minHeight="70dp"
            android:src="@drawable/coin" />

        <TextView
            android:padding="10dp"
            android:gravity="center"
            android:id="@+id/tvPackageName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:maxLines="1"
            android:textSize="17dp"
            android:textColor="@color/pink"
            app:fontFamily="@font/font_bold"
            tools:text="Package"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black_translucent"/>
        <TextView
            android:textSize="15dp"
            android:padding="10dp"
            android:gravity="center"
            android:id="@+id/txtGemsCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/white"
            app:fontFamily="@font/font_regular"
            tools:text="400 Votes"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black_translucent"/>
        <TextView
            android:textSize="13dp"
            android:padding="10dp"
            android:gravity="center"
            android:id="@+id/txtPrice"
            app:fontFamily="@font/font_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/colorPrimary"
            tools:text="$220"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>