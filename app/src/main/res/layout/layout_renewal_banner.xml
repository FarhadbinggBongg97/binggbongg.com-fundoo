<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/renewalLay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/colorPrimary"
    android:clickable="true"
    android:elevation="2dp"
    android:visibility="gone"
    android:focusable="true"
    android:padding="5dp"
    app:cardCornerRadius="3dp"
    app:cardElevation="2dp"
    app:rippleColor="@color/colorWhite">

    <RelativeLayout
        android:id="@+id/renewalBgLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <TextView
                android:id="@+id/txtRenewalTitle"
                style="@style/TextWhiteRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/expired"
                android:paddingStart="15dp"
                android:text="@string/expired"
                android:textAlignment="viewStart"
                android:textSize="@dimen/text_normal" />


            <TextView
                android:id="@+id/txtRenewalDes"
                style="@style/TextWhiteRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:text="@string/your_membership"
                android:textAlignment="viewStart"
                android:textSize="@dimen/text_medium" />

        </LinearLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRenewal"
            app:rippleColor="@color/searchRippleGrey"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/colorWhite"
            android:fontFamily="@font/font_regular"
            android:gravity="center_vertical"
            android:letterSpacing="0"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingStart="20dp"
            android:paddingTop="5dp"
            android:paddingEnd="20dp"
            android:paddingBottom="5dp"
            android:text="@string/renewal"
            android:textAllCaps="false"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_small"
            app:cornerRadius="20dp" />

        <!--<androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRenewal"
            style="@style/TextWhiteRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/btn_subscribe_bg"
            android:elevation="0dp"
            android:gravity="center_vertical"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingStart="20dp"
            android:paddingTop="5dp"
            android:paddingEnd="20dp"
            android:paddingBottom="5dp"
            android:text="@string/renewal"
            android:textAllCaps="false"
            android:textColor="@color/btn_subscribe_text"
            android:textSize="@dimen/text_normal"
            android:visibility="gone" />-->

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>